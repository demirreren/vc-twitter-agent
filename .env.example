# Slack Bot OAuth token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-bot-token

# Slack App-level token for Socket Mode (starts with xapp-)
SLACK_APP_TOKEN=xapp-your-app-token

# Slack user ID of the GP (e.g. U012AB3CD)
GP_SLACK_USER_ID=U0000000000

# Slack channel ID for #twitter (e.g. C012AB3CD)
TWITTER_CHANNEL_ID=C0000000000

# OpenAI API key (for Whisper transcription)
OPENAI_API_KEY=sk-your-openai-key

# Timezone for the scheduler (default: America/Toronto)
TIMEZONE=America/Toronto
